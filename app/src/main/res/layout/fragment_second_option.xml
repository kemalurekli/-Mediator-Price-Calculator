<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SecondOptionFragment">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ihtiyari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/menu_items"
        android:minHeight="60dp"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:text="İhtiyari Uyuşmazlık"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_davaSarti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/menu_items"
        android:minHeight="60dp"
        android:padding="15dp"
        android:text="Dava Şartı Kapsamındaki Uyuşmazlıklar"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_ihtiyari"
        app:layout_constraintStart_toStartOf="@+id/btn_ihtiyari"
        app:layout_constraintTop_toBottomOf="@id/btn_ihtiyari" />

</androidx.constraintlayout.widget.ConstraintLayout>